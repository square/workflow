<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/game_banner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:text="Player One, place your X"
        style="@style/TextAppearance.AppCompat.Large"
        />

    <Button
        android:id="@+id/game_banner_button_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="New Game"
        style="@style/Base.TextAppearance.AppCompat.Button"
        />

    <Button
        android:id="@+id/game_banner_button_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="New Game"
        style="@style/Base.TextAppearance.AppCompat.Button"
        />

  </LinearLayout>

  <GridLayout
      android:id="@+id/board_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:columnCount="3"
      >

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/light_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="X"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/dark_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="O"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/light_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="X"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/dark_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="O"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/light_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="X"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/dark_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="O"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/light_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="X"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/dark_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="O"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:background="@color/light_cell"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/symbol"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="X"
        />
  </GridLayout>

</LinearLayout>
